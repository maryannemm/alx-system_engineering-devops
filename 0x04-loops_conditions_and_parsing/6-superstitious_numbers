#!/usr/bin/env bash
# This script displays numbers and superstitious messages for specific iterations

# Initialize a counter
counter=1

# Using a while loop to display numbers and messages
while [ $counter -le 20 ]; do
    case $counter in
        4)
            echo "$counter"
            echo "bad luck from China"
            ;;
        9)
            echo "$counter"
            echo "bad luck from Japan"
            ;;
        17)
            echo "$counter"
            echo "bad luck from Italy"
            ;;
        *)
            echo "$counter"
            ;;
    esac

    ((counter++))
done

